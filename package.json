{
  "name": "lazy-soccer-contracts",
  "scripts": {
    "prettier": "prettier --check \"contracts/**/*.sol\" \"constants/**/*.js\" \"scripts/**/*.js\" \"test/**/*.js\" \"utils/**/*.js\" \"hardhat.config.js\" \"helper-hardhat-config.js\"",
    "prettier:fix": "prettier --write \"contracts/**/*.sol\" \"constants/**/*.js\" \"scripts/**/*.js\" \"test/**/*.js\" \"utils/**/*.js\" \"hardhat.config.js\" \"helper-hardhat-config.js\"",
    "solhint": "solhint --config ./.solhint.json contracts/**/*.sol",
    "solhint:fix": "solhint --config ./.solhint.json \"contracts/**/*.sol\" --fix",
    "coverage": "hardhat coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "hardhat": "^2.13.0",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "dotenv": "^16.0.3"
  }
}
