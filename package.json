{
  "name": "lazy-soccer-contracts",
  "scripts": {
    "prettier": "prettier --check contracts/**/*.sol",
    "prettier:fix": "prettier --write \"contracts/**/*.sol\"",
    "solhint": "solhint --config ./.solhint.json contracts/**/*.sol",
    "solhint:fix": "solhint --config ./.solhint.json \"contracts/**/*.sol\" --fix",
    "coverage": "hardhat coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@openzeppelin/contracts": "^4.5.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.13.0",
    "hardhat-deploy": "^0.11.25",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1"
  },
  "dependencies": {
    "dotenv": "^16.0.3"
  }
}
